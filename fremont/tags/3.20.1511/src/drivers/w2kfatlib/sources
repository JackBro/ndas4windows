TARGETNAME=libw2kfat
TARGETPATH=obj
TARGETTYPE=LIBRARY
DRIVERTYPE=FS

BUILD_PRODUCES=libw2kfat

C_DEFINES=$(C_DEFINES) -DUNICODE -D_UNICODE
C_DEFINES=$(C_DEFINES) -D__LFS__

SOURCES=	W2kFatLib.c

INCLUDES=$(INCLUDES);$(NDAS_DRIVER_INC_PATH)
INCLUDES=$(INCLUDES);$(NDAS_DRIVER_INC_PATH)\kernel
INCLUDES=$(INCLUDES);..\lfsfilter;..\lfsfiltlib
INCLUDES=$(INCLUDES);$(NDAS_INC_PATH)

# Only for Windows 2000 target.
!IF DEFINED(_NT_TARGET_VERSION)
!	IF $(_NT_TARGET_VERSION) != 0x500
!		ERROR	Target OS must be Windows 2000.
!	ENDIF
!ENDIF

PASS1_PUBLISH= {$(O)\$(TARGETNAME).lib=$(NDAS_DRIVER_LIB_PATH)\$(TARGETNAME).lib}
