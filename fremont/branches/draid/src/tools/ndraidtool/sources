TARGETNAME=ndraidtool
TARGETTYPE=PROGRAM
TARGETPATH=obj

C_DEFINES=/DUNICODE /D_UNICODE

INCLUDES=.\inc;$(NDAS_INC_PATH);$(NDAS_PUBLIC_INC_PATH);$(PSDK_INC_PATH)
RCOPTIONS=/i $(NDAS_INC_PATH) /i $(NDAS_INC_PATH)\ndas
UMENTRY=wmain
MSC_WARNING_LEVEL=-W3 -WX -Wp64
UMTYPE=console

!IF $(FREEBUILD)
USE_MSVCRT=1
MSC_OPTIMIZATION=/Ox
!ELSE
USE_LIBCMT=1
DEBUG_CRTS=1
C_DEFINES=$(C_DEFINES) /DNDASOP_SLIB
!ENDIF

BUILD_CONSUMES=ndascomm
BUILD_CONSUMES=ndasop
#BUILD_CONSUMES=libndascomm
#BUILD_CONSUMES=libndasop

TARGETLIBS=\
	$(PSDK_LIB_PATH)\user32.lib \
	$(NDAS_PUBLIC_LIB_PATH)\ndascomm.lib

!IF $(FREEBUILD)
TARGETLIBS=\
	$(TARGETLIBS) \
	$(NDAS_PUBLIC_LIB_PATH)\ndasop.lib \
!ELSE
TARGETLIBS=\
	$(TARGETLIBS) \
	$(PSDK_LIB_PATH)\ole32.lib \
	$(NDAS_LIB_PATH)\libscrc32.lib \
	$(NDAS_LIB_PATH)\libndasop.lib 
!ENDIF

PRECOMPILED_INCLUDE=stdafx.h

SOURCES= ndraidtool.cpp
