C_DEFINES=/DUNICODE /D_UNICODE
USECXX_FLAG=/Tp
USER_C_FLAGS=/EHsc /Wp64

!IF $(FREEBUILD)
USE_MSVCRT=1
!ELSE
USE_LIBCMT=1
DEBUG_CRTS=1
!ENDIF

#PRECOMPILED_INCLUDE=stdafx.h
#PRECOMPILED_CXX=1

SOURCES= \
	xcrypt_hash.cpp \
	xcrypt_encrypt.cpp \
	md5.cpp

# publish lib files to the project root
PASS1_PUBLISH= {$(O)\$(TARGETNAME).lib=$(NDAS_LIB_PATH)\$(TARGETNAME).lib}
