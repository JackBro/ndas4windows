TARGETNAME=ndasmsiu
TARGETTYPE=DYNLINK
TARGETPATH=obj

BUILD_PRODUCES=ndasmsiu

DLLDEF=$(O)\ndasmsiu.def
UMTYPE=console
DLLENTRY=_DllMainCRTStartup

C_DEFINES=/DUNICODE /D_UNICODE
INCLUDES=..\inc;$(NDAS_INC_PATH);$(PSDK_INC_PATH)
RC_OPTIONS=/i $(NDAS_INC_PATH)

!IF $(FREEBUILD)
USE_LIBC=1
MSC_OPTIMIZATION=/Ox
!ELSE
USE_LIBC=1
DEBUG_CRTS=1
!ENDIF
MSC_WARNING_LEVEL=-W3 -WX -Wp64

PRECOMPILED_INCLUDE=precomp.hpp

VC7_SYMBOLS=1

TARGETLIBS= \
	$(PSDK_LIB_PATH)\kernel32.lib \
	$(PSDK_LIB_PATH)\user32.lib \
	$(PSDK_LIB_PATH)\advapi32.lib \
	$(PSDK_LIB_PATH)\msi.lib \
	
SOURCES= \
	dllmain.cpp \
    ndasmsiu.cpp \
    instmsg.cpp \
	ndasmsiu.rc
