C_DEFINES = -DRASAUTODIAL -DNDIS40 -D_PNP_POWER_ -DNDIS_POOL_TAGGING=1 -DPKT_LOG=0

!ENDIF

!IFDEF XP
C_DEFINES = -D__XP__ $(C_DEFINES)
!ENDIF

